{
  "name": "nestjs-demo",
  "private": true,
  "version": "0.1.0",
  "description": "一个使用 NestJS 构建的示例项目",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "nest build && tsc-alias -v",
    "start": "nest start --exec \"pnpm tsc-alias -v && node dist/main\"",
    "start:dev": "nest start --watch --exec \"pnpm tsc-alias -v && node dist/main\"",
    "start:prod": "node dist/main",
    "format": "prettier --write .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "FOV-RGT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tsc-alias": "^1.8.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/testing": "^11.1.9",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "eslint": "9.39.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
